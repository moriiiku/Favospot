

<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">

      <section class="hero is-success">
          <div class="hero-body">
            <div class="container">
              <h1 class="title">
                <div class="col-8 offset-2 table-active h4 text-center">Log in
                </div>
              </h1>
            </div>
          </div>
        </section>




      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: "label" %>

            <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "input", class: "form-control"  %>
        </div>


        <div class="form-group">
          <%= f.label :password, class: "label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "input", class: "form-control"  %>
        </div>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>




<div class="columns is-centered">
  <div class="column">
    <figure>
      <div class="main-image"></div>
    </figure>
  </div>
</div>