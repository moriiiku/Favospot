<div class="container">
	<div class="row">
		<div class="col-md-8">
		 	<h1>Top#top</h1>
		 	
		 	<% @posts.each do |post|%>
		 	<%= link_to post_path(post) do %>
                  <%= attachment_image_tag post, :post_image %>
                <% end %>
		 	<% end %>


			<table class="table table-hover table-inverse">
				 <thead>
					<tr>
						<th></th>
						<th><font>Title</font></th>
						<th><font>Body</font></th>
						<th colspan="3"></th>
					</tr>
				 </thead>
			</table>
		</div>
		<%= render 'posts/sidebar', user: @user, post: @post %>
	 </div>
</div>
