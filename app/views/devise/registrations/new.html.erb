




<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2>Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
            <%= f.label :profile_image, "プロフィール画像", class: "label" %>
            <p class="control has-icons-left">
            <%= f.attachment_field :profile_image, autofocus: true, autocomplete: "profile_image", :placeholder => "profile_image", class: "input" %>
            </p>
          </div>


        <div class="form-group">
          <%= f.label :username, class: "label" %>
          <%= f.text_field :user_name, autofocus: true, autocomplete: "email", class: "input", class: "form-control"  %>
          </p>
        </div>

        <div class="form-group">
          <%= f.label :email, class: "label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", class: "form-control"  %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "label" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "input", class: "form-control"  %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, class: "label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input", class: "form-control"  %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>



  <div class="columns is-centered">
    <div class="column">
      <figure>
        <div class="main-image"></div>
      </figure>
    </div>
  </div>
  
</section>
